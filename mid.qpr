SELECT Performance.id_pupil, AVG(Performance.marks) AS medium,;
  Pupil.surname, Pupil.name, Group.gr_number;
 FROM ;
     Performance,;
    Pupil,;
    Group;
 WHERE  Performance.id_pupil = Pupil.id_pupil;
   AND  Group.id_group = Pupil.id_group;
 GROUP BY Performance.id_pupil;
 INTO CURSOR tmp  

 DROP TABLE 
CREATE TABLE medium;
  (id_pupil i,;
   medium i,;
  surname c(50),;
  name c(50),;
  gr_number i);

INSERT INTO medium;
SELECT *;
FROM tmp
